  <body>
    <%- include('../includes/navigation.ejs') %>
    <%- include('../includes/layout.ejs') %>
    <h1 class='text-3xl text-center mb-3'>Create new product</h1>    
    <form class="rounded shadow p-4 bg-white" action="/admin/add-product" method="POST">
        <div class='form-control'>
          <label for="title">Title</label>
          <input type="text" name="title" id="title" />
        </div>
        <div class='form-control'>
          <label for="imageUrl">Image</label>
          <input type="text" name="imageUrl" id="imageUrl" />
        </div>
        <div class='form-control'>
          <label for="price">Price</label>
          <input type="number" name="price" id="price" step='0.01' />
        </div>
        <div class='form-control'>
          <label for="description">Description</label>
          <textarea rows='4' type="text" name="description" id="description"></textarea>
        </div>

        <button class="btn mt-6" type="submit">Add Product</button>
      </form> 
   

<%- include('../includes/end.ejs')  %> 